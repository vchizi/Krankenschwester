<Window x:Class="Krankenschwester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Krankenschwester"
        mc:Ignorable="d"
        Title="MainWindow" Topmost="True" WindowStyle="None" AllowsTransparency="True" Background="Transparent" SizeToContent="Width" Height="30"
        ResizeMode="NoResize" ShowInTaskbar="False"
        SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="NearestNeighbor" LocationChanged="Window_LocationChanged" Top="{Binding Position.Top, Mode=TwoWay}" Left="{Binding Position.Left, Mode=TwoWay}">
    <StackPanel Orientation="Horizontal"  MouseDown="Window_MouseDown">
        <Border Name="brd_collapseMainWindow" Visibility="Visible" BorderBrush="#FF9797A0" BorderThickness="5" Height="30" Width="10"></Border>
        <StackPanel x:Name="ButtonsStack" Orientation="Horizontal"/>
    </StackPanel>
</Window>
